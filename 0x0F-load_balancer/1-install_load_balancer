#!/usr/bin/env bash
#installing haproxy

sudo apt update
sudo apt install haproxy -y

#distributing the traffic to the servers
cat <<EOL | sudo tee /etc/haproxy/haproxy.cfg/
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server 119370-web-01 100.26.200.73:80 check
    server 119370-web-02 54.87.157.65:80 check
EOL

sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy
sudo service haproxy restart
sudo haproxy -c -v -f /etc/haproxy/haproxy.cfg
echo "HAProxy has been installed and configured successfully."
